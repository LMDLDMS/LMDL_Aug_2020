<div class="outer-w3-agile mt-3">
    <h4 class="tittle-w3-agileits mb-4">Onboarding Videos</h4>
    @using (Html.BeginForm("isOnBordingVideo", "Admin", FormMethod.Post, new { @id = "form1", @databvalidatorvalidate = "", @databvalidatortheme = "bs3form" }))
    {
        <div class="form-group">
            <input type="hidden" value="@ViewBag.id" name="did" />

            @{
                if (ViewBag.status != null)
                {
                    if (ViewBag.status == "Pending")
                    {
                        <div>
                            @Html.RadioButton("isOnBordingVideo", "Pending", new { @checked = "checked" })
                            <label class="custom-control-label">Pending</label>
                        </div>
                        <div>
                            @Html.RadioButton("isOnBordingVideo", "Completed")
                            <label class="custom-control-label">Completed</label>
                        </div>
                    }
                    else if (ViewBag.status == "Completed")
                    {
                        <div>
                            @Html.RadioButton("isOnBordingVideo", "Pending")
                            <label class="custom-control-label">Pending</label>
                        </div>
                        <div>
                            @Html.RadioButton("isOnBordingVideo", "Completed", new { @checked = "checked" })
                            <label class="custom-control-label">Completed</label>
                        </div>
                    }
                }
                else
                {
                    <div>
                        @Html.RadioButton("isOnBordingVideo", "Pending")
                        <label class="custom-control-label">Pending</label>
                    </div>
                    <div>
                        @Html.RadioButton("isOnBordingVideo", "Completed")
                        <label class="custom-control-label">Completed</label>
                    </div>
                }
            }

            
            <br />
            <div>
                Notes :
                <textarea id="OnBordinVideoRemark" name="OnBordinVideoRemark" class="form-control" placeholder="Enter remarks"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
</div>
