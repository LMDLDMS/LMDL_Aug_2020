@model deliverymangementsystem.EDM.tblrole
<script>

     $(document).ready(function () {
        $("#form1").bValidator();
    });

</script>

<div class="outer-w3-agile mt-3">
    <h4 class="tittle-w3-agileits mb-4">Create New Role</h4>
    @using (Html.BeginForm( "CreateRole","Admin",FormMethod.Post,new {@id="form1", @databvalidatorvalidate = "", @databvalidatortheme = "bs3form" }))
    {


        <div class="form-group">
            <label for="inputAddress">Role Name</label>

            @Html.TextBoxFor(c => c.role_name, new { @class = "form-control", @placeholder = "Enter Role Name", @databvalidator = "required" })
            @Html.ValidationMessageFor(c=>c.role_name ,"", new { @class = "text-danger" })
            @Html.HiddenFor(c=>c.role_id)
            @*<input type="text" class="form-control" id="inputAddress" placeholder="Enter Full Name" required="">*@
        </div>
        <div class="form-group">
            <label for="inputAddress2">Phone No</label>
            @Html.DropDownList("status", new List<SelectListItem> { new SelectListItem { Text = "Active", Value = "active" }, new SelectListItem { Text = "Dactive", Value = "dactive" } },"Please Select Status" ,new { @class = "form-control", @databvalidator = "required" })
            @Html.ValidationMessageFor(c => c.status, "", new { @class = "text-danger" })
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>

    }

</div>
