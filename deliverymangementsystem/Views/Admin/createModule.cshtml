@model deliverymangementsystem.EDM.tblmodule

<script>

     $(document).ready(function () {
        $("#form1").bValidator();
    });

</script>

<div class="outer-w3-agile mt-3">
    <h4 class="tittle-w3-agileits mb-4">Create New Module</h4>
    @using (Html.BeginForm("createModule", "Admin", FormMethod.Post,new {@id="form1", @databvalidatorvalidate = "", @databvalidatortheme = "bs3form" }))
    {
        
        <div class="form-group">
            <label for="inputAddress">Module Name</label>

            @Html.TextBoxFor(c => c.module_name, new { @class = "form-control", @placeholder = "Enter Module Name", @databvalidator = "required" })
        
            @Html.HiddenFor(c => c.module_id)
            @*<input type="text" class="form-control" id="inputAddress" placeholder="Enter Full Name" required="">*@
        </div>
        <div class="form-group">
            <label for="inputAddress2">Select Status</label>
            @Html.DropDownList("module_status", new List<SelectListItem> { new SelectListItem { Text = "Active", Value = "active" }, new SelectListItem { Text = "Dactive", Value = "dactive" } }, "Please Select Status", new { @class = "form-control", @placeholder = "Enter Full Name", @databvalidator = "required" })
           
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    }

</div>