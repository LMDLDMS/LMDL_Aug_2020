@model deliverymangementsystem.EDM.tbldrivertest
<script>

    $(function () {


        $("#schdate1").datepicker({ minDate: 0, maxDate: "+5M +10D", dateFormat: 'dd-mm-yy' });
    });
    $(document).ready(function () {
        $("#form1").bValidator();

        $("#yesid").click(function () {

            $("#company_email").show();
        });
        $("#noid").click(function () {
            
            $("#company_email").hide();

        });
    });
</script>

<div class="outer-w3-agile mt-3">
    <h4 class="tittle-w3-agileits mb-4">Driver Documentaion </h4>
    @using (Html.BeginForm("testcheck","Admin",FormMethod.Post,new {@id="form1", @databvalidatorvalidate = "", @databvalidatortheme = "bs3form" }))
    {
        

        <div class="form-group">
            <label for="inputAddress">Email ID  Created</label>
            <div>
                @Html.RadioButtonFor(c => c.isemailcreated, "Yes",new {@checked ="checked",@id="yesid" })
                <label class="custom-control-label" for="credit">Yes</label>
            </div>
            <div>
                @Html.RadioButtonFor(c => c.isemailcreated, "No",new {@id="noid"})
                <label class="custom-control-label" for="credit">No</label>
            </div>

            @Html.TextBoxFor(c => c.company_email, new { @class = "form-control", @placeholder = "Enter company Email", @databvalidator = "required,email" })
            @Html.HiddenFor(c=>c.d_id)
            @Html.HiddenFor(c=>c.test_id)
            @*<input type="text" class="form-control" id="inputAddress" placeholder="Enter Full Name" required="">*@
        </div>
        <div class="form-group">
            <label for="inputAddress">Onbording Link Send</label>

            <div>
                @Html.RadioButtonFor(c => c.isonbordingLinkCreated, "Yes", new { @checked = "checked" })
                <label class="custom-control-label" for="credit">Yes</label>
            </div>
            <div>
                @Html.RadioButtonFor(c => c.isonbordingLinkCreated, "No")
                <label class="custom-control-label" for="credit">No</label>
            </div>

            @*<input type="text" class="form-control" id="inputAddress" placeholder="Enter Full Name" required="">*@
        </div>
        <div class="form-group">
            <label for="inputAddress">Is Background Check Cleared</label>

            <div>
                @Html.RadioButtonFor(c => c.isbackgrundcheckclear, "Yes", new { @checked = "checked" })
                <label class="custom-control-label" for="credit">Yes</label>
            </div>
            <div>
                @Html.RadioButtonFor(c => c.isbackgrundcheckclear, "No")
                <label class="custom-control-label" for="credit">No</label>
            </div>

            @*<input type="text" class="form-control" id="inputAddress" placeholder="Enter Full Name" required="">*@
        </div>
        <div class="form-group">
            <label for="inputAddress">Drug Test Clear</label>

            <div>
                @Html.RadioButtonFor(c => c.isdragtestclear, "Yes", new { @checked = "checked" })
                <label class="custom-control-label" for="credit">Yes</label>
            </div>
            <div>
                @Html.RadioButtonFor(c => c.isdragtestclear, "No")
                <label class="custom-control-label" for="credit">No</label>
            </div>

            @*<input type="text" class="form-control" id="inputAddress" placeholder="Enter Full Name" required="">*@
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      
    }

</div>

