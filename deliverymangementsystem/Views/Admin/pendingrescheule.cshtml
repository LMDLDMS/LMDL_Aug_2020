@{

    var objcomm = new common();


}
<div class="outer-w3-agile mt-3">
    <h4 class="tittle-w3-agileits mb-4">Schedule Interview</h4>
    @using (Html.BeginForm("pendingrescheule", "Admin", FormMethod.Post, new { @id = "form1", @databvalidatorvalidate = "", @databvalidatortheme = "bs3form" }))
    {


        @*<div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Email</label>
