@model deliverymangementsystem.EDM.tblonbordingmaster
@using deliverymangementsystem.Models;
<script>

    $(function () {

        $("#emp_interview_date").datepicker({ minDate: 0, maxDate: "+5M +10D", dateFormat: 'mm-dd-yy' });
    });
    $(document).ready(function () {

        $('#timepicker12').timepicki();
        $("#form1").bValidator();
    });
