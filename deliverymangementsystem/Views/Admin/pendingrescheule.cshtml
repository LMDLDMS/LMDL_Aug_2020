            <label for="inputAddress">Interview Date</label>
            @Html.TextBox("emp_interview_date", String.Format("{0:d}", Model.emp_interview_date.Value.ToString("MM-dd-yyyy")), new { @class = "form-control", @placeholder = "Enter Enter Email", @databvalidator = "required" })
