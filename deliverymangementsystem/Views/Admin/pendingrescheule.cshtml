        </div>
        <div class="form-group">
            <label for="inputAddress2">Phone No</label>
            @Html.TextBoxFor(c => c.emp_phone, new { @class = "form-control", @placeholder = "Enter Phone No", @databvalidator = "number,maxlen[10],minlen[10],required", @databvalidatormsg = "Enter Valid Mobile Number" })
        </div>
        <div class="form-group">
