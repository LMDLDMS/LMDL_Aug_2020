@model deliverymangementsystem.EDM.tblticket

@{
    ViewBag.Title = "OpenTicket";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

<script>

    $(document).ready(function () {

        $("#ticket_type").change(function () {

            var textdata = $("#ticket_type").val();
            if (textdata == "Van") {

                $("#vanNumber").show();
                $("#vantype").show();
                $("#vandorname").show()
                $("#supplyneeded").hide();
                $("#Quantityid").hide();
                $("#cat_phone").hide()
                $("#cat_gas").hide();
                
            }

            if (textdata == "CAT Phone") {
                $("#vanNumber").hide();
                $("#vantype").hide();
                $("#vandorname").hide()
                $("#supplyneeded").hide();
                $("#Quantityid").hide();
                $("#cat_phone").show()
                $("#cat_gas").hide();


            }

            if (textdata == "Gas Card") {
                $("#vanNumber").hide();
                $("#vantype").hide();
                $("#vandorname").hide()
                $("#supplyneeded").hide();
                $("#Quantityid").hide();
                $("#cat_phone").hide()
                $("#cat_gas").show();

            }
            if (textdata == "Business Supplies") {
                $("#vanNumber").hide();
                $("#vantype").hide();
                $("#vandorname").hide()
                $("#supplyneeded").show()
                $("#Quantityid").show();
                $("#cat_phone").hide()
                $("#cat_gas").hide();

            }

        });
    });

</script>
<div class="outer-w3-agile mt-3">
    <h4 class="tittle-w3-agileits mb-4">New Ticket Form</h4>
    @using (Html.BeginForm("OpenTicket", "Ticket", FormMethod.Post, new { @databvalidatorvalidate = "", @databvalidatortheme = "bs3form" }))
    {

