            @Html.DropDownListFor(c => c.ticket_type, new List<SelectListItem> { new SelectListItem { Text = "Van", Value = "Van" }, new SelectListItem { Text = "CAT Phone", Value = "CAT Phone" }, new SelectListItem { Text = "Gas Card", Value = "Gas Card" }, new SelectListItem { Text = "Business Supplies", Value = "Business Supplies" } }, "Select Ticket Type ", new { @class = "form-control", @databvalidator = "required" })

            @*<input type="text" class="form-control" id="inputAddress" placeholder="Enter Full Name" required="">*@
        </div>
        <div class="form-group" id="vanNumber">
